<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sara.mapper.BoardMapper">

	<select id="getList" resultType="org.sara.domain.BoardVO">
<![CDATA[
	select * from board where board_id > 0
 order by board_id desc ]]>



	</select>

	<insert id="insert">
		insert into board(board_id,users_id_id,title,content)
		values (null,#{users_id_id},#{title},#{content})
	</insert>

	<select id="read" resultType="org.sara.domain.BoardVO">
		select * from board where board_id
		= #{board_id}
	</select>

	<update id="update">
		update board
		set title=#{title},
		content=#{content},
		users_id_id=#{users_id_id},

		update_at=sysdate()

		where board_id=#{board_id}
	</update>

	<delete id="delete">
		delete from board where board_id = #{board_id}
	</delete>

	<select id="getAllBoards" resultType="org.sara.domain.BoardVO"> <!-- 페이징처리 -->

		SELECT * FROM board where board_id >0 order by board_id desc
		LIMIT #{start, jdbcType=INTEGER}, #{pageSize, jdbcType=INTEGER}

	</select>

	<select id="countBoards" resultType="int">
		SELECT COUNT(*) FROM board
	</select>










</mapper>